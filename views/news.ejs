<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }
        header {
            background-color: #333;
            color: white;
            padding: 10px;
            text-align: center;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 100;
        }
        .navbar {
            background-color: #916DB3;
            color: white;
            padding: 10px;
            text-align: center;
            position: fixed;
            top: 0; /* Push navbar to the top */
            left: 0;
            width: 100%;
            z-index: 100;
        }
        .navbar h2 {
            font-family: "Times New Roman", serif;
            margin: 0;
        }
        footer {
            background-color: #916DB3;
            color: white;
            padding: 10px;
            text-align: center;
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            z-index: 100;
        }
        .content {
            padding-top: 60px; /* Adjust the top padding to accommodate the fixed navbar and header */
            padding-bottom: 70px; /* Adjust the bottom padding to accommodate the fixed footer */
        }
        h1 {
            background-color: #FCBAAD;
            color: white;
            padding: 10px;
            margin-top: 0px;
            font-family: "Arial", sans-serif; /* Change font style of the title */
        }
        h3 {
            font-family: "Arial", sans-serif;
            color: #34421E;
            margin: 0;
            padding-bottom: 5px;
            font-family: "Times New Roman", serif;
        }
        ul {
            list-style-type: none;
            padding: 0;
        }
        .row {
            display: flex;
            flex-wrap: wrap;
        }
        .article {
            flex: 0 0 calc(33.33% - 20px); /* Adjust width to fit three articles in a row */
            margin: 10px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
            background-color: #FDE5EC;
            
        }
        /* Add styles for dropdown */
        .dropdown-content {
            display: none;
            background-color: #f9f9f9;
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 10px;
            margin-top: 5px;
        }
        .dropdown:hover .dropdown-content {
            display: block;
        }
        .thumbnail {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        }
        .thumbnail img {
            max-width: 150%;
            max-height: 200px;
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <div class="navbar">
        <h2>My News App</h2>
    </div>

    <div class="content">
        <h1><%= title %></h1>
        <div class="row">
            <% articles.forEach((article, index) => { %>
                <div class="article">
                    <div class="thumbnail">
                        <img src="<%= article.urlToImage %>" alt="<%= article.title %>">
                    </div>
                    <div class="dropdown">
                        <h3><%= article.title %></h3>
                        <div class="dropdown-content">
                            <% if (article.urlToImage) { %>
                                
                            <% } %>
                            <p><%= article.description %></p>
                            <a href="<%= article.url %>">Read more</a>
                        </div>
                    </div>
                </div>
                <% if ((index + 1) % 3 === 0) { %>
                    </div><div class="row">
                <% } %>
            <% }); %>
        </div>
    </div>

    <footer>
        <p>&copy; <%= new Date().getFullYear() %> My News App. All rights reserved.</p>
    </footer>

    <script>
        // Add JavaScript to handle dropdown
        const dropdowns = document.querySelectorAll('.dropdown');
        dropdowns.forEach(dropdown => {
            dropdown.addEventListener('click', () => {
                const dropdownContent = dropdown.querySelector('.dropdown-content');
                dropdownContent.style.display = dropdownContent.style.display === 'block' ? 'none' : 'block';
            });
        });
    </script>
</body>
</html>
